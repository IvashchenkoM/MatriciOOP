using System;

namespace matrci1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите количество элементов массива: \t");
            int CountMas = int.Parse(Console.ReadLine());
            int[] mas = new int[CountMas];
            Console.WriteLine("\n Введите ваш массив:");
            for (int i = 0; i < mas.Length; i++)
            {

                mas[i] = int.Parse(Console.ReadLine());
            }
            int counter=0;

            Console.WriteLine("\n Задание 3.Вывести количество положительных элементов массива:");
            for (int i = 0; i < mas.Length; i++)
            {

                if(mas[i]>0)
                {
                    counter++;
                }    
            }
            Console.WriteLine(counter);
            
            

            Console.ReadLine();

        }


    }
}
